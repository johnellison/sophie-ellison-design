extends layout

include views/mixins/footer-nav

block title 
  | Projects - Sustainable Lifestyle Design

block content
  article.l-main-content
    .l-projects-index-content
      h1 Projects

      ul.l-projects-list
        each project in projects
          li
            a(href="/" + project.name + ".html")
              h2= project.name
              img(src= project.name + "-thumbnail.jpg", alt="")
            p= project.description
            a.button(href="/" + project.name + ".html") read more

      +footer-nav(
        'watch my video',
        '/',
        'read what i do',
        '/what-i-do.html'
        )
