header.l-site-header.fixed
  nav.top-bar(data-topbar='', role='navigation')
    ul.title-area
      li.name
        h1
          a(href='/')= site.title
      li.toggle-topbar.menu-icon
        a(href='#')
          span Menu

    section.top-bar-section
      ul.right
        li: a(href='/') Home
        li: a(href='/projects.html') Projects
        li: a(href='/what-i-do.html') What I Do
        li.has-dropdown
          a(href='/about.html') About
          ul.dropdown
            li: a(href='/about.html') About Me
            li: a(href='/my-story.html') My Story
            li: a(href='/my-process.html') My Process
            li: a(href='/inspiration.pdf', title="open inspiration pdf", data-event="view-inspiration-pdf") Inspiration (.pdf)
        li#contact: a(href='/contact.html') Contact
